@{
    Layout = "~/Views/Shared/Admin/_Reviews_Layout.cshtml";
}
<!-- review section starts  -->

<section class="review" id="review">
    <br />
    <br />
    <br />
    <br />
    <h3 class="sub-heading">  review </h3>
    <h1 class="heading"> Reviews of customers </h1>

    <div class="swiper-container review-slider">

        <div class="">
            @foreach (var i in ViewBag.reviews)
            {
                <div class="swiper-slide slide">
                    <i class="fas fa-quote-right"></i>
                    <div class="user">
                        <img src="~/images/profile2.jfif" alt="">
                        <div class="user-info">
                            <h3>@i.RevName @i.RevSurname</h3>
                            <div class="stars">
                                @if (@i.RevRating == "")
                                {
                                    <p>
                                        <span class="starrating">no star rating</span> <br />
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        <span class="starrating"> <span class="starnumber">@i.RevRating</span> star rating</span> <br />
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                    <p>@i.Review</p>
                </div>

                <br />
            }
           
            <style>
                section {
                    width: 100%;
                }

                .review-content {
                    width: 100%;
                    height: 50vh;
                    background-color: white;
                    border-radius: 10px;
                }

                .review-content2 {
                    width: 100%;
                    height: 10vh;
                    background-color: white;
                    border: dashed;
                    border-color: lightgray;
                    border-radius: 5px;
                    font-size: 12pt;
                    font-family: Arial;
                    padding: 5px;
                }
            </style>





