@{
    Layout = "~/Views/Shared/Admin/_Orders_Layout.cshtml";
}

<!-- review section starts  -->

<section class="review" id="review">
    <br />
    <br />
    <br />
    <br />
    <h3 class="sub-heading">  Orders </h3>
    <h1 class="heading"> Orders of registered customers </h1>

    <div class="swiper-container review-slider">

        <div class="">
            @foreach (var i in ViewBag.Orders)
            {
                <div class="swiper-slide slide">
                    <i class="fas fa-quote-right"></i>
                    <div class="user">
                        <img src="~/images/profile2.jfif" alt="">
                        <div class="user-info">
                            <h3>User ID:  @i.UserID</h3><br />
                            <h3>Order ID: @i.OrderId</h3>
                            <div class="stars">
                                <p>
                                    Menu Item Ordered Id: @i.DishID <br />
                                    Address: @i.Address
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
            }

            <style>
                section {
                    width: 100%;
                }

                .review-content {
                    width: 100%;
                    height: 50vh;
                    background-color: white;
                    border-radius: 10px;
                }

                .review-content2 {
                    width: 100%;
                    height: 10vh;
                    background-color: white;
                    border: dashed;
                    border-color: lightgray;
                    border-radius: 5px;
                    font-size: 12pt;
                    font-family: Arial;
                    padding: 5px;
                }
            </style>





